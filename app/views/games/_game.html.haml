.scaffold_record{:id => "#{dom_id game}"}
  %h1 #{game.name}
  %h3 #{game.date}
  %p 
    = link_to "Show this game", game
    = link_to "Add a bet", new_bet_path(:game_id => game.id)
  - bets = game.bets
  - unless bets.empty?
    %h3 Bets
    %ul
      - bets.each do |bet|
        = render :partial => 'bets/bet', :locals => {:bet => bet}